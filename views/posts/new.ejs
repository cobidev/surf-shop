<% layout('layouts/boilerplate') -%>

<h1>New Post!</h1>

<form id="postNewForm" action="/posts" method="POST" enctype="multipart/form-data">
	<div><input type="text" name="post[title]" placeholder="Title"></div>
	<div><input type="text" name="post[price]" placeholder="Price"></div>
	<div>
		<input id="imageUpload" type="file" accept="images/*" name="images" multiple />
	</div>
	<div><textarea name="post[description]" placeholder="Description"></textarea></div>
	<div><input type="text" name="post[location]" placeholder="Location"></div>

	<input type="submit">
</form>

<!-- Form Validation -->
<script src="/javascripts/post-new.js"></script>